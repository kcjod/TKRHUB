<%- include('./partials/header') %>
<div class="w-screen h-screen bg-yellow-200">
    <div class="w-[90vw] h-[75vh] bg-zinc-100 absolute left-[50%] top-[50%] translate-x-[-50%] translate-y-[-50%] rounded-2xl sm:w-[90vw] sm:h-[70vh] md:w-[45vw] h-[65vh] lg:w-[30vw] h-[65vh]">
        <form class="w-full h-full flex justify-center items-center flex-col gap-5" action="/login" method="post">
            <div class="logo w-[20%] flex justify-center items-center overflow-hidden">
                <img class="object-cover" src="/images/IMG_20240413_143707-removebg.png" alt="">
            </div>
            <h1 class="font-semibold text-3xl">Login</h1>
            <input class="w-[70%] py-1 px-2 rounded-md focus:outline-none focus:ring focus:ring-yellow-400" type="text" name="username" placeholder="Username">
            <input class="w-[70%] py-1 px-2 rounded-md focus:outline-none focus:ring focus:ring-yellow-400" type="password" name="password" placeholder="Password">
            <% if(err && err.length>0){ %>
                <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
                    <span class="block sm:inline"><%= err %></span>
                  </div>                  
            <% } %>
            <p>Didn't have account? <a href="/signup" class="text-blue-600">Register</a></p>
            <input class="mt-5 bg-yellow-400 opacity-85 text-white px-3 py-2 rounded-xl cursor-pointer hover:opacity-100 " type="submit" value="Login">
        </form>
    </div>
</div>

<%- include('./partials/footer') %>
